<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@drawable/rounded_corner_light_grey"
    android:layout_margin="12dp"
    android:weightSum="2"
    android:orientation="vertical">

    <TextView
        android:layout_weight="0.5"
        android:id="@+id/text_view_state_name"
        android:layout_width="match_parent"
        android:textAlignment="center"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorBlack"
        android:textSize="22sp"
        android:fontFamily="@font/circular_std_black"
        android:text="GUJARAT"/>

    <LinearLayout
        android:layout_weight="1.8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="4"
        android:layout_gravity="center_vertical"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/circular_std_book"
                android:textColor="@color/colorRed"
                android:text="Confirmed"/>
<!--            <LinearLayout-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:orientation="horizontal">-->
<!--                <TextView-->
<!--                    android:id="@+id/text_view_state_confirmed"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textColor="@color/colorRed"-->
<!--                    android:textSize="22sp"-->
<!--                    android:fontFamily="@font/circular_std_book"-->
<!--                    android:text="43"/>-->
<!--                <TextView-->
<!--                    android:id="@+id/text_view_state_dconfirmed"-->
<!--                    android:layout_width="wrap_content"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:textColor="@color/colorRed"-->
<!--                    android:textSize="13sp"-->
<!--                    android:layout_marginStart="3dp"-->
<!--                    android:fontFamily="@font/circular_std_book"-->
<!--                    android:text="(+4)"/>-->
<!--            </LinearLayout>-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_state_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorRed"
                    android:textSize="22sp"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="43"/>
                <TextView
                    android:id="@+id/text_view_state_dconfirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorRed"
                    android:textSize="13sp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="(+4)"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:fontFamily="@font/circular_std_book"
                android:textColor="@color/colorBlue"
                android:text="Active"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_state_active"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlue"
                    android:textSize="22sp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="32"/>
                <TextView
                    android:id="@+id/text_view_state_dactive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorBlue"
                    android:textSize="13sp"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="(+3)"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/circular_std_book"
                android:text="Recovered"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_state_recovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorGreen"
                    android:textSize="22sp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="23"/>
                <TextView
                    android:id="@+id/text_view_state_drecovered"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorGreen"
                    android:textSize="13sp"
                    android:layout_marginStart="3dp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="(+1)"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorDarkGrey"
                android:fontFamily="@font/circular_std_book"
                android:text="Deaths"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/text_view_state_deceased"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="22sp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="10"/>
                <TextView
                    android:id="@+id/text_view_state_ddeaths"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="3dp"
                    android:layout_gravity="center_horizontal"
                    android:textColor="@color/colorDarkGrey"
                    android:textSize="13sp"
                    android:fontFamily="@font/circular_std_book"
                    android:text="(+1)"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>