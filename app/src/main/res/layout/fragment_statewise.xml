<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:textSize="14sp"
        android:layout_marginBottom="2dp"
        android:id="@+id/text_view_state_source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/circular_std_book"
        android:layout_gravity="center_horizontal"
        android:text="Source : covid19india.org"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:id="@+id/recycler_view_statewise_list"/>

    <TextView
        android:id="@+id/text_view_no_statewise_entry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_margin="16dp"
        android:textColor="@color/colorPrimary"
        android:textSize="17sp"
        android:visibility="gone"
        android:fontFamily="@font/circular_std_medium"
        android:text="Error in loading State wise Entry, Make sure you are connected with internet." />

</LinearLayout>